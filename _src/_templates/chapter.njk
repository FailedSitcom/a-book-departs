---
layout: base.njk
---

<style>
.book-body h1,
.book-body h2 {
  color: {{ meta.color }};
}
</style>
<main role="main" id="main">
  {% if chapnum %}
  <div class="outer-wrap chapter-opener" style="background: {{ data.color }}">
    <div class="inner-wrap">
      <h2 class="chapter-title"><span class="chapter-num">{{ chapnum }}</span> {{title}}</h2>
    </div>
  </div>
  {% endif %}
  {% set prev = collections.chapter | getPreviousCollectionItem( page ) %}
  {% set next = collections.chapter | getNextCollectionItem( page ) %}
  <div class="outer-wrap">
    <div class="inner-wrap book-body">
      {% if not chapnum %}
      <h2>{{title}}</h2>
      {% endif %}
      {{ content | safe }}
      <nav class="inner-nav repel">
        <span>
        {% if prev %}
          <a href="{{ prev.url }}" class="chap-prev">
            <svg aria-hidden="true" viewBox="0 0 27 65" width="27" height="65" xmlns="http://www.w3.org/2000/svg"><path d="M5.274 5.452 22 33 5.274 5.452ZM22 33 5 60l17-27Z" stroke="#979797" stroke-width="9" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"/></svg>
            {{ prev.data.title }}
          </a>
        {% endif %}
        </span>
        <span>
        {% if next %}
          <a href="{{ next.url }}" class="chap-next">
          {{ next.data.title }}
          <svg aria-hidden="true" viewBox="0 0 27 65" width="27" height="65" xmlns="http://www.w3.org/2000/svg"><path d="M5.274 5.452 22 33 5.274 5.452ZM22 33 5 60l17-27Z" stroke="#979797" stroke-width="9" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </a>
        {% endif %}
        </span>
      </nav>
    </div>
  </div>
</main>